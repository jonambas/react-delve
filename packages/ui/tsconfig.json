{
  "include": ["src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "**/tests/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "ES2022",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
